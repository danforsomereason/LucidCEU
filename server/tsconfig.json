{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["node", "express"]
    },
    "include": ["src/**/*.ts", "src/types/express.d.ts"],
    "exclude": ["node_modules"]
}
